{
  "openapi": "3.1.0",
  "info": {
    "title": "Church Management API",
    "version": "1.0.0"
  },
  "paths": {
    "/tenants/{tenantId}/members": {
      "get": {
        "summary": "List members",
        "operationId": "listMembers",
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "status",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["active", "inactive", "visitor"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Member collection",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MemberCollection"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create member",
        "operationId": "createMember",
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateMemberPayload"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Member created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Member"
                }
              }
            }
          }
        }
      }
    },
    "/tenants/{tenantId}/donations": {
      "post": {
        "summary": "Record donation",
        "operationId": "recordDonation",
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RecordDonationPayload"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Donation recorded",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Donation"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Member": {
        "type": "object",
        "required": ["id", "tenantId", "firstName", "lastName", "status"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "tenantId": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["active", "inactive", "visitor"]
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "phone": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "MemberCollection": {
        "type": "object",
        "required": ["data"],
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Member"
            }
          },
          "meta": {
            "type": "object",
            "properties": {
              "pagination": {
                "type": "object",
                "properties": {
                  "total": { "type": "integer" },
                  "page": { "type": "integer" },
                  "perPage": { "type": "integer" }
                }
              }
            }
          }
        }
      },
      "CreateMemberPayload": {
        "type": "object",
        "required": ["firstName", "lastName", "status"],
        "properties": {
          "firstName": { "type": "string" },
          "lastName": { "type": "string" },
          "status": { "type": "string", "enum": ["active", "inactive", "visitor"] },
          "email": { "type": "string", "format": "email" },
          "phone": { "type": "string" }
        }
      },
      "Donation": {
        "type": "object",
        "required": ["id", "tenantId", "amount", "currency", "receivedAt"],
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "tenantId": { "type": "string" },
          "amount": { "type": "number" },
          "currency": { "type": "string" },
          "fund": { "type": "string" },
          "receivedAt": { "type": "string", "format": "date-time" }
        }
      },
      "RecordDonationPayload": {
        "type": "object",
        "required": ["amount", "currency"],
        "properties": {
          "memberId": { "type": "string", "format": "uuid" },
          "amount": { "type": "number" },
          "currency": { "type": "string" },
          "fund": { "type": "string" },
          "receivedAt": { "type": "string", "format": "date-time" }
        }
      }
    }
  }
}
