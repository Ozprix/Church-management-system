{
  "name": "church-management-platform",
  "type": "module",
  "private": true,
  "version": "0.1.0",
  "description": "Monorepo workspace for the multi-tenant church management SaaS platform.",
  "scripts": {
    "dev": "pnpm run dev:web",
    "dev:web": "pnpm --filter web dev",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint -- --fix",
    "test": "pnpm -r test",
    "test:unit": "vitest run --config vitest.workspace.ts",
    "test:watch": "vitest watch --config vitest.workspace.ts",
    "generate:contracts": "pnpm --filter @church/contracts run generate"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.1",
    "@types/node": "^20.14.10",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest-dom": "^5.3.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-testing-library": "^6.2.0",
    "globals": "^15.8.0",
    "jsdom": "^24.1.1",
    "openapi-typescript": "^6.7.0",
    "turbo": "latest",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.16.1",
    "vitest": "^1.6.0"
  },
  "packageManager": "pnpm@8.15.4"
}
